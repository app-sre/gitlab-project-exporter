{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>app-sre/shared-pipelines//renovate/default.json"
  ],
  "packageRules": [
    {
      "description": "Automerge of pydantic updates",
      "matchPackageNames": [
        "pydantic"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
