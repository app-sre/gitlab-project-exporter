{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>app-sre/shared-pipelines//renovate/default.json"
  ],
  "packageRules": [
    {
      "description": "Automerge updates to python-312 images",
      "matchPackageNames": [
        "registry.access.redhat.com/ubi9/python-312"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ],
      "automerge": true
    }
  ]
}
